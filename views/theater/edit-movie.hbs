<section class="theater-parent">
    <div class="content-card">
        <div class="theater-headings">
            <div class="theater-header-selector"></div>
            <h2>Edit Movie</h2>
        </div>
        <form class="form theater-add-screen-form" action="">
            <label for="title">Title</label>
            <input type="text" name="title" value={{movie.title}}>
            <label for="cast">Cast</label>
            <input type="text" name="cast" value={{movie.cast}}>
            <label for="director">Director</label>
            <input type="text" name="director" value={{movie.director}}>
            <label for="release">Release Date</label>
            <input type="text" name="release" value={{movie.release}}>
            <label for="runtime">Runtime</label>
            <input type="text" name="runtime">
            <label for="lang">Language</label>
            <input type="text" name="lang" value={{movie.lang}}>
            <label for="type">Type</label>
            <input type="text" name="type" value={{movie.genre}}>
            <label for="trailer">trailer Link</label>
            <input type="text" name="trailer" value={{movie.trailer}}>
            <button>Submit</button>
        </form>
    </div>
</section>
