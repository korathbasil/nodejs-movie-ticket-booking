<div class="admin-add-theater-owner">
    <div class="content-card">
        <div class="admin-headings">
            <div class="admin-header-selector"></div>
            <h2>Add Theater Owner</h2>
        </div>
        <form class="add-theater-owner-form" action="/admin/theater/add-owner" method="POST"
            enctype="multipart/form-data">
            <p>Fill the form below.</p>
            <label for="name">
                Name
            </label>
            <input type="text" name="name" required>
            <label for="email">
                Email
            </label>
            <input type="email" name="email" required>
            <label for="phone">
                Phone
            </label>
            <input type="tel" name="phone" required>
            <label for="theater">
                Theater Name
            </label>
            <input type="text" name="theater" required>
            {{!-- <div class="form-image-container">
                <i class="fas fa-camera"></i>
            </div> --}}
            <label for="image">Profile Image</label>
            <input type="file" name="image" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|image/*" required>
            <button class="admin-form-submit-button" type="submit">Submit</button>
        </form>
    </div>
</div>
