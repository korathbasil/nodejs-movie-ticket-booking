<div class="admin-parent">
  <section class="admin-theater-management">
    <div class="content-card">
      <div class="admin-headings">
        <div class="admin-header-selector"></div>
        <h2>Theater Owners List</h2>
      </div>
      {{!-- <div id="admin-theter-dialogue" class="admin-theater-dialogue">
        <h3>Are you sure ?</h3>
        <div class=""><a id="delete-theater-confirm-yes" href="" class="theater-owner-table-button">YES</a>
          <a href="" onclick="closeConfirmDialogue(event)" class="theater-owner-table-button">NO</a></div>
      </div> --}}
      <a class="admin-theater-management-add-link" href="/admin/theater/add-theater">Add Theater Partner</a>
      <table class="admin-theater-owner-table">
        <tr class="admin-user-table-row">
          <th class="admin-user-table-column1">No</th>
          <th class="admin-user-table-column2">Name</th>
          <th class="admin-user-table-column3">Theater Name</th>
          <th class="admin-user-table-column4">Theaters</th>
          <th class="admin-user-table-column5">Actions</th>
        </tr>
        {{#each theaters}}
        <tr>
          <td class="admin-theater-owner-table-no">{{@index}}</td>
          <td>
            <div class="table-image-name">
              <img src="{{this.image}}" alt="" />{{this.name}}
            </div>
          </td>
          <td>{{this.theater}}</td>
          <td><a class="theater-owner-table-button" href="/admin/theater/view-theaters/{{this._id}}">VIEW</a< /td>
          <td>
            <a class="theater-owner-table-button" href="/admin/theater/edit-owner/{{this._id}}">EDIT</a>
            <a class="theater-owner-table-button" href="" onclick="openConfirmDialogue(event,'{{this._id}}')">DELETE</a>
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  </section>
</div>
{{!-- Scripts --}}
<script>
  setActiveTab("theater-management")
  const rowNumbers = () => {
    const columns = document.querySelectorAll(".admin-theater-owner-table-no")
    columns.forEach(column => {
      console.log(column.innerHTML)
      const value = parseInt(column.innerHTML);
      column.innerHTML = value + 1;
    })
  }
  rowNumbers()
  const openConfirmDialogue = (e, id) => {
    e.preventDefault();
    document.getElementById("admin-theter-dialogue").style.display = "flex";
    document.getElementById("delete-theater-confirm-yes").href = `/admin/theater/delete-owner/${id}`
  }
  const closeConfirmDialogue = (e) => {
    e.preventDefault();
    document.getElementById("admin-theter-dialogue").style.display = "none";
  }
</script>